<h3>Stock Arrived</h3>

<form action="/music/buy" method="post">

<p>
  Select an album:
  <label>
    <select name="id">
    <option disabled selected>select..</option>
      <% for album in @albums %>
      <option value="<%= album.id %>"><%= album.title %></option>
      <% end %>
    </select>
  </label>
  <label>
    Quantity: 
    <input type="number"  name="quantity" min="0"/>
  </label>

  <input type="submit" value="Stock Arrived"/>
</p>
</form>

<hr/>

