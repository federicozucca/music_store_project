<form action="/music" method="get">
<input type="submit" value="Home Page" />
</form>
<hr/>
<hr/>

<h1>Inventory</h1>
<hr/>
<hr/>
<p>
<form action="/music/albums/new" method="get">
<input type="submit" value="Add a new album" />
</form>
<form action="/music/artists/new" method="get">
<input type="submit" value="Add a new artist" />
</form>
</p>
<hr/>
<hr/>

<% for album in @albums %>
<p>Title: <%= album.title()  %></p>
<p>Artist: <%= album.artist.name()  %></p>
<p>Genre: <%= album.genre()  %></p>
<p>Price: <%= album.price()  %></p>
<form action="/music/albums/<%= album.id  %>" method="get">
<input type="submit" value="Show details" />
</form>
<hr/>


<%end%>

