<h1>Update an ALBUM</h1>

<form action="/music/albums/<%= @album.id %>" method="post">
<p>
  <label>
    Title: 
    <input type="text"  name="title" value = "<%= @album.title %>"/>
  </label>
</p>


 <p>
 <label>
   Artist:
   <select name="artist_id">
   <% for artist in @artists %>
     <option <%= "selected" if @album.artist.id == artist.id %> value="<%= artist.id %>"><%= artist.name %></option>
   <% end %>
   </select>
   </label>
 </p>

 <p>
 <label>
   Genre:
   <select name="genre_id">
   <% for genre in @genres %>
     <option <%= "selected" if @album.genre.id == genre.id %> value="<%= genre.id %>"><%= genre.type %></option>
   <% end %>
   </select>
   </label>
 </p>



<p>
  <label>
    Price: 
    <input type="number"  name="price" value="<%= @album.price %>"/>
  </label>
</p>

  <input type="submit" value="Update"/>

</form>